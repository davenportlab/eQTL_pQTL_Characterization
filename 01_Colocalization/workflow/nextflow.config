trace {
    enabled = true
    file = 'execution_trace.txt'
}

executor {
    name = 'lsf'
    perJobMemLimit = true
}

process {

    executor = 'lsf'
    queue = 'normal'
    cpus = 16
    memory = '4.0 GB'
    time = '12h'
    clusterOptions = "-R'select[mem>4096]' -R'rusage[mem=4096]' -M4096"
    conda = '/lustre/scratch119/humgen/projects/gains_team282/nikhil/conda/env/'

    withLabel: Rbigmem {
        queue = 'long'
        cpus = 16
        memory = '100.0 GB'
        time = '24h'
        clusterOptions = "-R'select[mem>102400]' -R'rusage[mem=102400]' -M102400"
    }

    withLabel: R {
        queue = 'normal'
        cpus = 16
        memory = '8.0 GB'
        time = '12h'
        clusterOptions = "-R'select[mem>8192]' -R'rusage[mem=8192]' -M8192"
    }

    withLabel: vcftools {
        queue = 'normal'
        cpus = 16
        memory = '2.0 GB'
        time = '12h'
        clusterOptions = "-R'select[mem>2048]' -R'rusage[mem=2048]' -M2048"
    }

    withLabel: finemap {
        queue = 'normal'
        cpus = 16
        memory = '16.0 GB'
        time = '12h'
        clusterOptions = "-R'select[mem>16384]' -R'rusage[mem=16384]' -M16384"
    }

    withLabel: plink {
        queue = 'normal'
        cpus = 4
        memory = '16.0 GB'
        time = '12h'
        clusterOptions = "-R'select[mem>16384]' -R'rusage[mem=16384]' -M16384"
    }
}