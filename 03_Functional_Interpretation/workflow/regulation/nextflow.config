trace {
    enabled = true
    file = 'execution_trace.txt'
}

executor {
    name = 'lsf'
    perJobMemLimit = true
}

process {

    executor = 'lsf'
    queue = 'normal'
    cpus = 16
    memory = '4.0 GB'
    time = '12h'
    clusterOptions = "-R'select[mem>4096]' -R'rusage[mem=4096]' -M4096"
    conda = '/lustre/scratch119/humgen/projects/gains_team282/nikhil/conda/env/'

    withLabel: cell_shape_features {
        cpus = 2
        memory = '1.0 GB'
        time = '12h'
        clusterOptions = "-R'select[mem>1024]' -R'rusage[mem=1024]' -M1024"
    }

    withLabel: consensus_shape_features {
        cpus = 16
        queue = 'long'
        memory = '32.0 GB'
        time = '48h'
        clusterOptions = "-R'select[mem>32768]' -R'rusage[mem=32768]' -M32768"
    }
}